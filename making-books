# make a class for book to group title, author, and synopsis

class Book
  attr_reader :title, :author, :synopsis
  
  def initialize(title, author, synopsis)
    @title = title
    @author = author
    @synopsis = synopsis
  end
end

# to add more books to the list. Example text for now.

added_book = Book.new ("Winnie the Pooh", "AL Milne", "About a bear.")
book_list << added_book

